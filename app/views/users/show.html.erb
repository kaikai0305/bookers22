 <div class="container">

  <div class="row">

    <div class="col-md-3">
     <% if flash[:notice] %>
       <p id="notice">
     <%= flash[:notice] %>
       </p>
     <% end %>
      <%= render 'info', user: @user, book: @book %>
    </div>

     <div class="col-md-8 offset-md-1">
       <h2>Users</h2>
       <table class="table">
        <thead>
          <tr>
           <th>image</th>
           <th>name</th>
           <th colspan="3"></th>
         </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
         <tr>
          <td>
           <% if user.profile_image.attached? %>
            <%=image_tag user.profile_image,size: "100x100" %>
           <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
           <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show",user_path(user.id) %> </td>
         </tr>
         <% end %>
       </body>
       </table>
     </div>
 </div>
</div>