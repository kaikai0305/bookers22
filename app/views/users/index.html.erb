 <div class="container">

 <div class="row">

    <div class="col-md-3">
      <% if flash[:notice] %>
          <p id="notice">
        <%= flash[:notice] %>
         </p>
        <% end %>
      <%= render 'info', user: @user, book: @book %>
    </div>

        <div class="col-md-8 offset-md-1">
           <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
             <% @books.each do |book| %>
             <tr>
             <td>
              <% if book.user.profile_image.attached? %>
               <%= link_to user_path(book.user) do %>
                  <%=image_tag book.user.profile_image,size: "100x100" %>
               <% end %>
              <% else %>
               <%= link_to user_path(book.user) do %>
                <%= image_tag 'no_image', size: "100x100" %>
               <% end %>
              <% end %>
             </td>
             <td><%=link_to book.title, book_path(book) %></td>
             <td><%= book.body %> </td>
             </tr>
              <% end %>
            </tbody>
           </table>
        </div>
  </div>
</div>